<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   
    <%= f.input :name %>
    <%= f.input :description , :input_html => { :cols => 20, :rows => 3 } %>
    <%= f.association :category , :size => 20 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
